{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules",
    ".webpack",
    ".serverless",
    "prettier.config.js",
    "webpack.config.js",
    "scripts"
  ]
}
